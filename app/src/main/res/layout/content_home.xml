<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.DetailsActivity"
    tools:showIn="@layout/activity_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cvPatientInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/md_keylines"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="8dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:layout_marginTop="10dp"
                        android:text="Name:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="#42A5F5" />

                    <TextView
                        android:id="@+id/tvPatientName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:layout_marginTop="10dp"
                        android:text="Shivaraj"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="#42A5F5" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="Gender:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />

                    <TextView
                        android:id="@+id/tvPatientGender"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="Male"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />

                    <TextView
                        android:id="@+id/tvPatientBloodgroup"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="B+"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="Mobile:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />

                    <TextView
                        android:id="@+id/tvPatientPhone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="7353489699"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="Address:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />

                    <TextView
                        android:id="@+id/tvPatientAddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="#17/A BTM, Bangalore"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cvPatientSymptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/md_keylines"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="8dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_title_height"
                    android:layout_alignBottom="@+id/ivProfile"
                    android:layout_marginLeft="@dimen/md_keylines"
                    android:layout_marginTop="10dp"
                    android:text="Symptoms and Medication"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#42A5F5" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="Diagnosis:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />

                    <TextView
                        android:id="@+id/tvPatientDiagnosis"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="Chronic Fatigue Syndrome"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="Symptoms:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />

                    <TextView
                        android:id="@+id/tvPatientSymptoms"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="Fever, Dizziness"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="Medication:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />

                    <TextView
                        android:id="@+id/tvPatientMedication"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="Acetaminophen(20 Tablets)"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="To Be Taken:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />

                    <TextView
                        android:id="@+id/tvPatientTobetaken"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="1-0-1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="Comments:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />

                    <TextView
                        android:id="@+id/tvPatientComments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="People sleep a lot"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cvPatientDeseases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/md_keylines"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="8dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_title_height"
                    android:layout_alignBottom="@+id/ivProfile"
                    android:layout_marginLeft="@dimen/md_keylines"
                    android:layout_marginTop="10dp"
                    android:text="Known Deseases"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#42A5F5" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="Known Deseases:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />


                    <TextView
                        android:id="@+id/tvPatientDeseasesList"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="Male"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cvPatientDoct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="8dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_title_height"
                    android:layout_alignBottom="@+id/ivProfile"
                    android:layout_marginLeft="@dimen/md_keylines"
                    android:layout_marginTop="10dp"
                    android:text="Doctor Info"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#42A5F5" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="Dr Name:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />


                    <TextView
                        android:id="@+id/tvPatientDocName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="Dr Jay"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="Dr Speciality:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#42A5F5" />

                    <TextView
                        android:id="@+id/tvPatientDocSpeciality"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:text="ENT Specialist"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#303030" />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
